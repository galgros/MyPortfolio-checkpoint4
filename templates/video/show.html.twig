{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <div class="music-index">
        <div class="content-info-top">
            <h1>Video</h1>
        </div>

        <div class="show-video">
            <iframe src="{{ video.link|replace({'watch?v=' : 'embed/'}) }}"
                    class="youtube-iframe"
                    frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
            </iframe>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ video.link }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="admin-btn">
            {{ include('video/_delete_form.html.twig') }}

            <a href="{{ path('video_index') }}">
                <button class="btn btn-info">Retour</button>
            </a>
            <a href="{{ path('video_edit', {'id': video.id}) }}">
                <button class="btn btn-success">Modifier</button>
            </a>
        </div>
    </div>
{% endblock %}
