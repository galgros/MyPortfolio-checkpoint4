{% extends 'base.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <div class="music-index">

        <div class="content-info-top">
            <h1>Music</h1>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ music.title }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ music.link }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ music.createdAt ? music.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="admin-btn">
            {{ include('music/_delete_form.html.twig') }}

            <a href="{{ path('music_index') }}">
                <button class="btn btn-info">Retour</button>
            </a>

            <a href="{{ path('music_edit', {'id': music.id}) }}">
                <button class="btn btn-info">Modifer</button>
            </a>
        </div>
    </div>
{% endblock %}
